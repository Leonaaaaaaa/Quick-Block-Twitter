{
    "manifest_version": 2,
    "name": "Quick Block",
    "version": "1.1",
    "description": "Reduce blocking someone from 3 clicks to just 1",
    "icons": {
        "48": "icon/48icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*",
                "*://*.twitter.com/*"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ]
}
